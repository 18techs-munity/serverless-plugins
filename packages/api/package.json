{
  "name": "6poll-api",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "scripts": {
    "start": "sls offline start",
    "test": "nyc npm run _test",
    "_test": "npm run ava && npm run dredd",
    "ava": "ava",
    "dredd": "cross-env-shell NODE_OPTIONS=\"$NODE_OPTIONS -r source-map-support/register\" npm start -- --exec dredd",
    "dredd:watch": "npm-watch dredd"
  },
  "dependencies": {
    "aws-sdk": "^2.232.1",
    "serverless": "^1.26.1"
  },
  "devDependencies": {
    "@ava/babel-preset-stage-4": "^1.1.0",
    "ava": "^0.25.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.6",
    "dredd": "^5.1.7",
    "npm-watch": "^0.3.0",
    "nyc": "^11.7.3",
    "serverless-offline": "^3.20.3",
    "serverless-offline-dynamodb-streams": "^1.0.0",
    "serverless-offline-kinesis": "1.0.0",
    "serverless-webpack": "^5.1.1",
    "webpack": "^4.6.0"
  },
  "author": "",
  "license": "MIT",
  "watch": {
    "dredd": {
      "patterns": [
        "src",
        "swagger.yml",
        "serverless.yml",
        "test/dredd"
      ],
      "extensions": "js,yml"
    }
  },
  "ava": {
    "files": [
      "**/test/*.js"
    ],
    "cache": true,
    "failFast": true,
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "plugins": [
      "istanbul"
    ],
    "presets": [
      "@ava/stage-4"
    ]
  },
  "nyc": {
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "include": [
      "src/**/*.js"
    ],
    "all": true,
    "instrument": false,
    "sourceMap": false
  }
}
